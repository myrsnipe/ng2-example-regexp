{
  "atom": {
    "rewriteTsconfig": true
  },
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "charset": "utf8",
    "emitBOM": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "listFiles": true,
    "locale": "en-us",
    "module": "system",
    "moduleResolution": "node",
    "newLine": "cf",
    "noEmitHelpers": false,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5"
  },
  "files": [
    "./src/app/app.spec.ts",
    "./src/app/app.ts",
    "./src/app/router-active.ts",
    "./src/main.ts",
    "./src/vendor.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts"
  ]
}
